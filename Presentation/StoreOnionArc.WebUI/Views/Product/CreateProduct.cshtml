@model StoreOnionArc.Application.Features.CQRS.Commands.ProductCommands.CreateProductCommand

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Ürün Stoğu</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Kategori</label>
        <input type="text" asp-for="CategoryId" class="form-control" />
        <br />
        <button class="btn btn-primary">Ürünü Ekle</button>

    </form>
</div>